<!-- View to create/add a new document/mascota' -->
<div class="container">
  <h1>Crear mascota</h1>
  <!-- add mascota/document Form, through POST method to send data at (/mascotas) -->
  <form action="/mascotas" method="POST">
    <!-- Each input has name property because is the name in the model/Schema for each created mascota -->
    <input
      type="text"
      placeholder="Nombre de mascota"
      class="form-control my-2"
      name="nombre"
    />
    <input
      type="text"
      placeholder="DescripciÃ³n de la mascota"
      class="form-control my-2"
      name="descripcion"
    />
    <!-- When is submit, data will send to: 'router/mascotas' -->
    <button class="btn btn-success btn-block" type="submit">
      Agregar nueva mascota
    </button>
  </form>
</div>
